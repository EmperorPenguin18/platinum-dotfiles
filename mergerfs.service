[Unit]
Description=MergerFS Daemon
Requires=rclone.service
After=rclone.service

[Service]
Type=forking
ExecStart=/usr/bin/mergerfs -o use_ino,cache.files=off,dropcacheonclose=true,allow_other,func.getattr=newest,minfreespace=0K /mnt/Local=RW:/mnt/Cloud=RO /mnt/MergerFS
KillMode=process
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
